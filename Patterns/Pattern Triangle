#include<iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    for(int i=1; i<=n; i++)
    {
        for(int l=1; l<=n-i; l++)
        {
            cout<<"  ";
        }
        int h=i;
        for(int j=1; j<=i; j++)
        {
            cout<<h<<" ";
            h++;
        }
        h--;
        for(int k=1; k<i; k++)
        {
            h--;
            cout<<h<<" ";
        }
        cout<<endl;
    }
}
